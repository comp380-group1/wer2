<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wer2.main"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="viewevents.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="editparticipants.EditParticipantsActivity"
            android:label="@string/title_activity_edit_event_activity"
            android:windowSoftInputMode="stateUnchanged|adjustPan" >
        </activity>
        <activity
            android:name="viewevent.EventActivity"
            android:label="@string/title_activity_event" >
        </activity>
        <activity
            android:name="viewparticipant.ViewParticipantActivity"
            android:label="@string/title_activity_view_participant" >
        </activity>
        <activity
            android:name="editexpense.EditExpenseActivity"
            android:label="@string/title_activity_edit_expense"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="contacts.AddFromContactsActivity"
            android:label="@string/title_activity_add_from_contacts" >
        </activity>
        <activity
            android:name="contacts.AddContactsAdapterActivity"
            android:label="@string/title_activity_add_contacts_adapter" >
        </activity>
        <activity
            android:name="payments.ViewPaymentsActivity"
            android:label="@string/title_activity_view_payments" >
        </activity>
        <activity
            android:name="eventstatus.EventStatusActivity"
            android:label="@string/title_activity_event_status" >
        </activity>
        <activity
            android:name="reconcile.ReconciledActivity"
            android:label="@string/title_activity_reconciled" >
        </activity>
    </application>

</manifest>
